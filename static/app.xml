  <ModulePrefs title="Resistence">
    <Require feature="rpc"/>
  </ModulePrefs>
  <Content type="html"><![CDATA[
<!DOCTYPE html>
<!-- The hangout API JavaScript. Always include this first -->
<script src="//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<!-- The JavaScript for this app. This must always be a full URL not a
     relative path.
     Tip: You can load it from a local web server such as
     http://localhost/app.js for faster single user development -->
<script src="//resistence-1094.appspot.com/static/app.js"></script>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div id="initial_game_state">
  <img id="title_image">
  <div id="game_start">
    <button id="start_game_button" class="btn btn-success" type="button">
      Start Game!
    </button>
    <p id="non_master_text"></p>
    <p>Number of players: <span id="participants">xx</span></p>
  </div>
</div>

<div id="game_board">
  <table class="table">
    <tr>
      <td>
        <div id="player-2">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check" />
        </div>
      </td>
      <td align="center" class="center_column">
        <div id="player-3">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check"/>
        </div>
      </td>
      <td>
        <div id="player-4">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check"/>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div id="player-1">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check"/>
        </div>
      </td>
      <td align="center" class="center_column">
        <img id="main_image">
        <div id="circle"></div>
      </td>
      <td>
        <div id="player-5">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check"/>
        </div>
      </td>
    </tr>
  </table>
</div>

<div id="votingResult">
  Voting Result
  <table class="table table-bordered">
    <tr>
      <th>Yes</td>
      <th>No</td> 
    </tr>
    <tr>
      <td><div id="yes"></div></td>
      <td><div id="no"></div></td> 
    </tr>
    <tr>
      <th colspan="2"><div id="result"></th>
    </tr>
  </table>
  <button id="confirm_voting_result_button" type="button" class="btn btn-success">Confirm</button>
</div>

<div id="missionResult">
  <p>Mission Result: <span id="number_fails">xx</span></p>
  <button id="confirm_mission_result_button" type="button" class="btn btn-success">Confirm</button>
</div>

<div id="game_information">
  <table class="table table-bordered">
    <tr>
      <td width="30%">
        <div id="player-0">
          <p class="name">NAME</p>
          <img class="crown">
          <img class="shield">
          <input type="checkbox" class="check"/>
        </div>
      </td>
      <td width="70%">
        <p>You are a <span id="role">ROLE</span></p>
        <p id="flavor">FLAVOR TEXT</p>
        <div id="leader">
          <button id="confirmTeam" type="button" class="btn btn-success">Confirm Team!</button>
          <p id="leader_status"></p>
        </div>
        <div id="voteParticipants">
          <button type="button" id="acceptButton" class="btn btn-success">Accept!</button>
          <button type="button" id="rejectButton" class="btn btn-danger">Reject!</button>
        </div>
        <div id="mission">
          <button id="missionFail" type="button" class="btn btn-success">Fail!</button>
          <button id="missionPass" type="button" class="btn btn-danger">Pass!</button>
        </div>
        <button type="button" class="btn btn-default">Show Game Log</button>
      </td>
    </tr>
  </table>
</div>

<link type="text/css" rel="stylesheet"
      href="//resistence-1094.appspot.com/static/global.css" />

]]></Content>
</Module>
